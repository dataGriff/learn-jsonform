{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Group",
      "label": "üë§ Reviewer Information",
      "elements": [
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/reviewer/properties/firstName"
            },
            {
              "type": "Control",
              "scope": "#/properties/reviewer/properties/lastName"
            }
          ]
        },
        {
          "type": "Control",
          "scope": "#/properties/reviewer/properties/email"
        },
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/reviewer/properties/dateOfBirth"
            },
            {
              "type": "Control",
              "scope": "#/properties/reviewer/properties/experienceLevel"
            }
          ]
        },
        {
          "type": "Group",
          "label": "Location",
          "elements": [
            {
              "type": "HorizontalLayout",
              "elements": [
                {
                  "type": "Control",
                  "scope": "#/properties/reviewer/properties/location/properties/country"
                },
                {
                  "type": "Control",
                  "scope": "#/properties/reviewer/properties/location/properties/city"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Group",
      "label": "üè• Health Information", 
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/health/properties/consentToDataUse"
        },
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/health/properties/smokingStatus"
            },
            {
              "type": "Control",
              "scope": "#/properties/health/properties/alcoholConsumption"
            }
          ]
        },
        {
          "type": "Control",
          "scope": "#/properties/health/properties/hasAllergies"
        },
        {
          "type": "Control",
          "scope": "#/properties/health/properties/allergies",
          "rule": {
            "effect": "SHOW",
            "condition": {
              "scope": "#/properties/health/properties/hasAllergies",
              "schema": {
                "const": true
              }
            }
          }
        },
        {
          "type": "Control",
          "scope": "#/properties/health/properties/medications"
        },
        {
          "type": "Control",
          "scope": "#/properties/health/properties/healthConditions"
        }
      ]
    },
    {
      "type": "Group",
      "label": "ü•É Whiskey Information",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/whiskeyName"
        },
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/whiskeyType"
            },
            {
              "type": "Control",
              "scope": "#/properties/distillery"
            }
          ]
        }
      ]
    },
    {
      "type": "Group",
      "label": "Details",
      "elements": [
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/region"
            },
            {
              "type": "Control",
              "scope": "#/properties/ageStatement"
            }
          ]
        },
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/abv"
            },
            {
              "type": "Control",
              "scope": "#/properties/caskType"
            }
          ]
        },
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/priceRange"
            },
            {
              "type": "Control",
              "scope": "#/properties/isLimitedEdition"
            }
          ]
        }
      ]
    },
    {
      "type": "Group",
      "label": "Evaluation",
      "elements": [
        {
          "type": "Control",
          "scope": "#/properties/rating"
        },
        {
          "type": "Control",
          "scope": "#/properties/tastingNotes",
          "options": {
            "multi": true
          }
        }
      ]
    }
  ]
}
